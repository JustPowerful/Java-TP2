package Ex1;

public class Article {
	int ref;
	String description;
	double prixHt;
	int stock;
	Article(int ref, String description, double prixHt, int stock) {
		this.ref = ref;
		this.description = description;
		this.prixHt = prixHt;
		this.stock = stock;
	}
	
	void provision(int qt){
		this.stock += qt;
	}
	
	boolean sell(int qt) {
		int valeur = this.stock - qt;
		if (valeur >= 0) {
			this.stock = valeur;
			return true;
		} else {
			System.out.println("la vente est annulÃ©");
			return false;
		}
	}
}
