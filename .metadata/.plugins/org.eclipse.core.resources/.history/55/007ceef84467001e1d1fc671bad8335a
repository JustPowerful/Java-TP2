package Ex1;

public class Article {
	Int ref;
	String description;
	double prixHt;
	Int stock;
	Article(int ref, String description, double prixHt, int stock) {
		this.ref = ref;
		this.description = description;
		this.prixHt = prixHt;
		this.stock = stock;
	}
	
	void provision(int qt){
		this.stock += qt;
	}
	
	boolean sell(int qt) {
		Int valeur = this.stock - qt;
		if (valeur >= 0) {
			this.stock = valeur;
			return true;
		} else {
			System.out.println("la vente est annul√©");
			return false;
		}
	}
	
	double price() {
		double tax = this.prixHt * 0.2;
		return this.prixHt + tax;
	}
}
